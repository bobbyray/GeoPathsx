<?xml version="1.0"?>
<configuration>
  <!-- Example web.config file for web server for geopaths. Use real values where dummy values are shown. -->
  <appSettings file="Private\appSettings.config">
    <!-- appSettings that are private go in Private\appSettings.config file, 
         which should NOT be distruted in open source.-->
    <!-- AppSettings that are are ok to be open source follow here -->
    <add key="testKey" value="123" /> <!-- Not used, just an example-->
  </appSettings>
  <connectionStrings>
      <!-- Choose Local or GoDaddy Hosting Connection Strings -->
      <!-- For local Hosting 
      <add name="GeoPathString" connectionString="Server=localhost;Database=dummy_db_id;User ID=root;Password=dummy_pswd" providerName="MySql.Data.MySqlClient"/>
      -->
      <!-- For GoDaddy -->
      <add name="GeoPathString" connectionString="Server=dummy_server_resource;Database=dummy_db_id;User ID=dummy_user_id;Password=dummy_pswd" providerName="MySql.Data.MySqlClient"/>
      
  </connectionStrings>
  <system.web>
      <compilation debug="true" targetFramework="4.0"/>
  </system.web>
  <system.serviceModel>
    <!-- 20150807 Add bindings section in order to use https for webHttpBindings. -->
    <!-- From StackOverflow: http://stackoverflow.com/questions/7895392/wcf-rest-webinvoke-uritemplate-https-issue -->
      <bindings>
        <webHttpBinding>
         <!-- 20160823 Fix for 413 error request entity too large -->
          <!-- 20160823 From StackOverFlow, 2nd answer http://stackoverflow.com/questions/10122957/iis7-413-request-entity-too-large-uploadreadaheadsize -->
          <!-- 20160823 Error 500 at GoDaddy, internal error. 
                        maxReceivedMessageSize of 10485760 is too large.
                        2000000 works at GoDaddy. -->
          <!-- //20170616 Fix for https 400 error for uploading large files over https: 
               Use one binding, add readerQuota section -->
          <binding name="SslBinding" transferMode="Streamed" maxReceivedMessageSize="2000000"> 
            <security mode="Transport"> 
              <transport clientCredentialType="None"/> 
            </security>
            <readerQuotas maxStringContentLength="2000000" />
          </binding>
        </webHttpBinding>
      </bindings>
    
      <services> <!-- //20130326 added -->
          <service name="Service">
              <endpoint behaviorConfiguration="webHttp"  contract="Service"  binding="webHttpBinding" bindingConfiguration="SslBinding"/> <!-- //20170602 added bindingConfiguration="SslBinding"//20130328 DefinitelyNeeded attr binding="webHttpBinding"-->
          </service>
      </services>
      <behaviors>
          <endpointBehaviors> <!-- //20130326 added -->
              <behavior name="webHttp">
                  <webHttp/>
              </behavior>
          </endpointBehaviors>
          <serviceBehaviors>
        <behavior>
          <!-- To avoid disclosing metadata information, set the value below to false and remove the metadata endpoint above before deployment -->
          <serviceMetadata httpGetEnabled="true"/>
          <!-- To receive exception details in faults for debugging purposes, set the value below to true.  Set to false before deployment to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" aspNetCompatibilityEnabled="true"/> <!-- //20130326 added aspNetCompatibilityEnabled="true"-->
  </system.serviceModel>
  <system.webServer>
      <!-- staticContent section is for Html5 manifest for Windows IIS 7 Server at GoDaddy, courtesy Pete LePage -->
      <staticContent>
          <mimeMap fileExtension=".appcache" mimeType="text/cache-manifest"/>
      </staticContent>
      <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
  <!-- //20140317 Did NOT help: Disable caching the appcache (manifest) file. 
  <location path="ShoppingList.appcache">
    <system.webServer>
      <staticContent>
        <clientCache cacheControlMode="DisableCache" />
      </staticContent>
    </system.webServer>
  </location>
  -->
</configuration>